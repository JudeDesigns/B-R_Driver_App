{
  "name": "office_project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node --max-old-space-size=4096 server.js",
    "build": "prisma generate && next build",
    "start": "NODE_ENV=production node --max-old-space-size=4096 server.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:migrate": "node scripts/migrate-db.js",
    "db:seed": "node scripts/seed-db.js",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:setup:prod": "npm run prisma:migrate:prod && npm run db:seed",
    "deploy:setup": "npm ci && npm run build && npm run db:setup:prod",
    "deploy:start": "pm2 start ecosystem.config.js --env production",
    "deploy:restart": "pm2 restart br-driver-app",
    "deploy:stop": "pm2 stop br-driver-app",
    "deploy:logs": "pm2 logs br-driver-app",
    "docker:build": "docker build -t br-driver-app .",
    "docker:run": "docker run -d --name br-driver-app -p 3000:3000 --env-file .env.production br-driver-app",
    "deploy:configure": "chmod +x configure-deployment.sh && ./configure-deployment.sh",
    "deploy": "chmod +x deploy-to-server.sh && ./deploy-to-server.sh"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.7.0",
    "@types/file-saver": "^2.0.7",
    "argon2": "^0.43.0",
    "critters": "^0.0.23",
    "dotenv": "^17.0.1",
    "file-saver": "^2.0.5",
    "glob": "^13.0.0",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "next": "15.3.1",
    "nodemailer": "^7.0.2",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^21.11.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.17.32",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "prisma": "^6.7.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
